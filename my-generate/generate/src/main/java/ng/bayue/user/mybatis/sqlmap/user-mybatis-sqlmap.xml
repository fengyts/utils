<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ng.bayue.user.domain.UserMapper">

	<resultMap type="ng.bayue.user.domain.UserDO" id="UserDOResultMap">
		<id column="id" property="id" />
        <result column="nick_name" property="nickName"/>
        <result column="salt" property="salt"/>
        <result column="password" property="password"/>
        <result column="mobile" property="mobile"/>
        <result column="email" property="email"/>
        <result column="sex" property="sex"/>
        <result column="is_mobile_verified" property="isMobileVerified"/>
        <result column="is_referrer" property="isReferrer"/>
        <result column="referrer_id" property="referrerId"/>
        <result column="referral_count" property="referralCount"/>
        <result column="enc_user_id" property="encUserId"/>
        <result column="login_type" property="loginType"/>
        <result column="create_time" property="createTime"/>
        <result column="ip" property="ip"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="plat_form" property="platForm"/>
        <result column="source" property="source"/>
        <result column="state" property="state"/>
	</resultMap>

	<sql id="MybatisUserDAO_all_column_fields">
	      id,nick_name,salt,password,mobile,email,sex,is_mobile_verified,is_referrer,referrer_id,referral_count,enc_user_id,login_type,create_time,ip,modify_time,plat_form,source,state
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisUserDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="nickName != null  and nickName != '' "> AND nick_name=#{nickName} </if>
			<if test="salt != null  and salt != '' "> AND salt=#{salt} </if>
			<if test="password != null  and password != '' "> AND password=#{password} </if>
			<if test="mobile != null  and mobile != '' "> AND mobile=#{mobile} </if>
			<if test="email != null  and email != '' "> AND email=#{email} </if>
			<if test="sex != null "> AND sex=#{sex} </if>
			<if test="isMobileVerified != null "> AND is_mobile_verified=#{isMobileVerified} </if>
			<if test="isReferrer != null "> AND is_referrer=#{isReferrer} </if>
			<if test="referrerId != null "> AND referrer_id=#{referrerId} </if>
			<if test="referralCount != null "> AND referral_count=#{referralCount} </if>
			<if test="encUserId != null  and encUserId != '' "> AND enc_user_id=#{encUserId} </if>
			<if test="loginType != null "> AND login_type=#{loginType} </if>
			<if test="ip != null  and ip != '' "> AND ip=#{ip} </if>
			<if test="platForm != null "> AND plat_form=#{platForm} </if>
			<if test="source != null "> AND source=#{source} </if>
			<if test="state != null "> AND state=#{state} </if>
		</where>
 	</sql>

	<select id="MybatisUserDAO_selectById" parameterType="long" resultMap="UserDOResultMap">
	SELECT
		<include refid="MybatisUserDAO_all_column_fields" />
	FROM
		uc_user
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisUserDAO_insert" parameterType="ng.bayue.user.domain.UserDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO uc_user(
				id,
				nick_name,
				salt,
				password,
				mobile,
				email,
				sex,
				is_mobile_verified,
				is_referrer,
				referrer_id,
				referral_count,
				enc_user_id,
				login_type,
				create_time,
				ip,
				modify_time,
				plat_form,
				source,
				state
		)values(
				#{id},
				#{nickName},
				#{salt},
				#{password},
				#{mobile},
				#{email},
				#{sex},
				#{isMobileVerified},
				#{isReferrer},
				#{referrerId},
				#{referralCount},
				#{encUserId},
				#{loginType},
				#{createTime},
				#{ip},
				#{modifyTime},
				#{platForm},
				#{source},
				#{state}
		)
    </insert>

	<update id="MybatisUserDAO_updateById" parameterType="ng.bayue.user.domain.UserDO">
		UPDATE uc_user
		SET
					nick_name = #{nickName},
					salt = #{salt},
					password = #{password},
					mobile = #{mobile},
					email = #{email},
					sex = #{sex},
					is_mobile_verified = #{isMobileVerified},
					is_referrer = #{isReferrer},
					referrer_id = #{referrerId},
					referral_count = #{referralCount},
					enc_user_id = #{encUserId},
					login_type = #{loginType},
					ip = #{ip},
					modify_time = #{modifyTime},
					plat_form = #{platForm},
					source = #{source},
					state = #{state}
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisUserDAO_deleteById" parameterType="long">
		DELETE FROM uc_user WHERE id = #{id}
	</delete>

	<update id="MybatisUserDAO_update_dynamic" parameterType="ng.bayue.user.domain.UserDO">
		UPDATE uc_user
		<set>
					<if test="nickName != null  and nickName != '' ">nick_name=#{nickName},</if>
					<if test="salt != null  and salt != '' ">salt=#{salt},</if>
					<if test="password != null  and password != '' ">password=#{password},</if>
					<if test="mobile != null  and mobile != '' ">mobile=#{mobile},</if>
					<if test="email != null  and email != '' ">email=#{email},</if>
					<if test="sex != null ">sex=#{sex},</if>
					<if test="isMobileVerified != null ">is_mobile_verified=#{isMobileVerified},</if>
					<if test="isReferrer != null ">is_referrer=#{isReferrer},</if>
					<if test="referrerId != null ">referrer_id=#{referrerId},</if>
					<if test="referralCount != null ">referral_count=#{referralCount},</if>
					<if test="encUserId != null  and encUserId != '' ">enc_user_id=#{encUserId},</if>
					<if test="loginType != null ">login_type=#{loginType},</if>
					<if test="ip != null  and ip != '' ">ip=#{ip},</if>
					<if test="modifyTime != null ">modify_time=#{modifyTime},</if>
					<if test="platForm != null ">plat_form=#{platForm},</if>
					<if test="source != null ">source=#{source},</if>
					<if test="state != null ">state=#{state},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisUserDAO_select_dynamic" resultMap="UserDOResultMap" parameterType="ng.bayue.user.domain.UserDO">
	     SELECT
	     	<include refid="MybatisUserDAO_all_column_fields" />
		 FROM
		 	uc_user
			<include refid="MybatisUserDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisUserDAO_select_dynamic_count" resultType="long" parameterType="ng.bayue.user.domain.UserDO">
	     SELECT
	     	count(1)
		 FROM
		 	uc_user
	 	<include refid="MybatisUserDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisUserDAO_select_dynamic_page_query" resultMap="UserDOResultMap" parameterType="ng.bayue.user.domain.UserDO">
	     SELECT
	     	<include refid="MybatisUserDAO_all_column_fields" />
		 FROM
		 	uc_user
	 	<include refid="MybatisUserDAO_dynamic_where_fields" />
	 	ORDER BY uc_user.id DESC
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>